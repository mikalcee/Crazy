<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.igaaft.mickalc.crazyeights" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"

            android:configChanges = "orientation|keyboardHidden" ><!-- makes sure that screen orientation
            does not occur when: the hardware keyboard is slid open or closed and the software keyboard
            is enabled or disabled  -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges = "orientation|keyboardHidden" >
        </activity>

    </application>

</manifest>
